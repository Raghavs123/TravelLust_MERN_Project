<% layout("/layouts/boilerplate") %>

<body>
    <!-- <h3 class="mt-3">All Listings</h3> -->

    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter{
            text-align: center;
            margin-left: 2rem;
            margin-top: 1rem;
            opacity: 0.7;
        }

        .filter:hover{
            opacity: 1;
            cursor: pointer;    
            /* text-decoration: underline; */
        }

        .filter p{
            font-size: 0.85rem;
        }

        .tax-info{
            display: none;
        }

        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 2.75rem;
            /* width: 13rem; */
            padding-top: 0.5rem;
            padding-left: 0.6rem;
            margin-left: 2rem;
        }
    </style>

    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Views</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-building"></i></div>
            <p>Design</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Countryside</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Swimming Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-water"></i></div>
                <p>Lake</p>
            </div>                       
            <div class="filter">
                <div><i class="fa-solid fa-anchor"></i></div>
                <p>Boat</p>
            </div>        
            <!-- <div class="filter">
                <div><i class="fa-solid fa-tower-observation"></i></div>
                <p>Towers</p>
            </div> -->
            <!-- <div class="filter">
                <div><i class="fa-solid fa-paint-roller"></i></div>
                <p>Creative Spaces</p>
            </div>  -->

            <!-- Tax Switch Button or Checkbox -->
            <div class="tax-toggle"> 
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input mr-4 ml-2" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                    <label class="form-check-label ml-5" for="flexSwitchCheckChecked">Display Taxes</label>
                  </div>          
            </div>            
    </div>
    
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card" style="width: 21rem;">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 16rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>/day
                        <i class="tax-info"> &nbsp; +18% GST</i>
                      </p>
                    </div>
                </div>                
            </a>
        <% } %>        
    </div>

    <!--  <ul> -->
        <!-- <% for(let listing of allListings){ %> -->
            <!-- <li><a href="/listings/<%= listing._id %>"><%= listing.title %></a></li> -->
        <!-- <% } %> -->
    <!-- </ul> --> 

    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckChecked")
        taxSwitch.addEventListener("click", () => {
            // console.log("clicked");
            let taxInfo = document.getElementsByClassName("tax-info");
            // console.log(taxInfo);

            // agar Tax Switch click kra to +18% GST show kro & unclick kra to unshow kro
            for(info of taxInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";  // inline nhi h to inline ho jaegi
                } else {
                    info.style.display = "none";    // inline h to none ho jaegi
                }
            }
        });
    </script>

</body>
